<form style="margin-top : 0.5em;" method="post" action="{{ path('supplier_delete', {'id': supplier.id}) }}" onsubmit="return confirm('Etes-vous sur de supprimer ce fournisseur');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ supplier.id) }}">
    <button class="button is-danger">Supprimer</button>
</form>
