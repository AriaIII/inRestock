<form class="delete-form"  method="post" action="{{ path('backend_stock_delete', {'id': stock.id}) }}" onsubmit="return confirm('Etes-vous sÃ»r(e) de vouloir supprimer ce stock ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ stock.id) }}">
    {% if is_granted('ROLE_VISITOR') %}
