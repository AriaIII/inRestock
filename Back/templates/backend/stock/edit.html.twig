{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Stock {{product.name}} {% endblock %}

{% block body %}

<nav class="breadcrumb has-succeeds-separator transparent" aria-label="breadcrumbs">
        <ul>
            <li><a href="{{path('index')}}">Accueil</a></li>
            <li><a href="{{path('product_show', {'id' : product.id})}}">{{product.name}}</a></li>
            <li class="is-active"><a href="{{ path('role_index') }}" aria-current="page">Modifier le stock</a></li>
        </ul>
    </nav>

<div class="new-title">
    <h4 class="title is-4">Stock de {{product.name}}</h4>
</div>

    {{ include('backend/stock/_form.html.twig', {'button_label': 'Valider'}) }}
    <p class="control">
        <a class="button is-primary" href="{{ path('product_show', {'id': product.id}) }}">Retour au produit</a>
    </p>
    {{ include('backend/stock/_delete_form.html.twig') }}
</div>
{% endblock %}
