{% extends 'base.html.twig' %}

{% block title %}Modification index{% endblock %}

{% block body %}
    <h1>Modification index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for modification in modifications %}
            <tr>
                <td>{{ modification.id }}</td>
                <td>{{ modification.name }}</td>
                <td>
                    <a href="{{ path('modification_show', {'id': modification.id}) }}">show</a>
                    <a href="{{ path('modification_edit', {'id': modification.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('modification_new') }}">Create new</a>
{% endblock %}
