{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h2 class="title is-2">Liste des postes</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.name }}</td>
                <td>
                    <a href="{{ path('post_show', {'id': post.id}) }}"><i class="fas fa-info-circle"></i></a>
                    <a href="{{ path('post_edit', {'id': post.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucuns postes trouv√©s</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="create-new button is-primary" href="{{ path('post_new') }}">Nouveau poste </a>
{% endblock %}
