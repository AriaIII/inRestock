{% extends 'backend/backend_layout.html.twig' %}

{% block title %}{{post.name}}{% endblock %}

{% block body %}
    <div class="new-title">
        <h2 class="title is-2">Poste : {{post.name}}</h2>
    </div>

 <div class="transparent">
        <h3 class="subtitle">Employés actuellement affectés à ce poste : </h3>
       <div>
           <ul class="transparent-list">
        {% for user in post.users %}

                 <li class="list-li">
        {{user.firstName}} {{user.lastName}}
                </li>
        {% else %}
                <li>Aucun salarié trouvé </li>
        {% endfor %}
            </ul>
       </div>

       <img src="{{ asset(image_upload_path ~  (post.photo)) }}">
 </div>


    <div class="field is-grouped create-new">
        <p class="control">
          <a class="button is-primary" href="{{ path('post_index') }}">
              Retour a la liste
          </a>
        </p>
        <p class="control">
          <a class="button is-warning" href="{{ path('post_edit', {'id': post.id}) }}">
              Modifier le poste
          </a>
        </p>
        <p class="control">
        {{ include('backend/post/_delete_form.html.twig') }}

        </p>
      </div>


    {% endblock %}
