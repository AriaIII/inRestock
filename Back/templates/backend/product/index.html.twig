{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <h2 class="title is-2">Liste des produits disponibles :</h2>

            <ul>
                {% for product in products %}
                <li>  {{ product.name }}
                        <a href="{{ path('product_show', {'id': product.id}) }}"><i class="fas fa-info-circle"></i></a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}"><i class="fas fa-edit"></i></a>
                </li>
                {% else %}
                <li>no records found </li>
                {% endfor %}
            </ul>


    <a class="create-new button is-primary" href="{{ path('product_new') }}">Create new</a>
</div>



{% endblock %}
