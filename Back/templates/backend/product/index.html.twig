{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <div class="new-title">
        <h2 class="title is-2">Liste des produits disponibles :</h2>
    </div>


            <ul class="list-ul">
                {% for product in products %}
                <li class="list-li">  {{ product.name }}
                        <a href="{{ path('product_show', {'id': product.id}) }}"><i class="fas fa-info-circle"></i></a>
                        <a href="{{ path('product_edit', {'id': product.id}) }}"><i class="fas fa-edit"></i></a>
                </li>
                {% else %}
                <li>Aucun produits trouv√© </li>
                {% endfor %}
            </ul>


    <a class="button is-primary" href="{{ path('product_new') }}">Nouveau produit</a>




{% endblock %}
