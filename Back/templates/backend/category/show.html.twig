{% extends 'backend/backend_layout.html.twig' %}

{% block title %}{{category.name}}{% endblock %}

{% block body %}
    <h2 class="title is-2">{{category.name}}</h2>
    <h3 class="create-new subtitle is-5">Produits associés à cette catégorie :</h3>
    {% for product in category.products %}

        <ul>
             <li>
                    <a href="{{ path('product_show', {'id': product.id}) }}">{{product.name}}</a>
            </li>
    {% else %}
            <li>Aucun produit trouvé </li>
        </ul>
    {% endfor %}


    <div class="field is-grouped create-new">
            <p class="control">
              <a class="button is-primary" href="{{ path('category_index') }}">
                  Retour a la liste
              </a>
            </p>
            <p class="control">
              <a class="button is-warning" href="{{ path('category_edit', {'id': category.id}) }}">
                  Modifier la catégorie
              </a>
            </p>
            <p class="control">
            {{ include('backend/category/_delete_form.html.twig') }}

            </p>
          </div>

{% endblock %}
