{% extends 'backend/backend_layout.html.twig' %}

{% block title %}Liste des rôles{% endblock %}

{% block body %}
    <div class="new-title">
        <h2 class="title is-2">Liste des rôles</h2>
    </div>

    <table class="table is-hoverable">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for role in roles %}
            <tr>
                <td>{{ role.code }}</td>
                <td>{{ role.name }}</td>
                <td>
                    <a href="{{ path('role_show', {'id': role.id}) }}"><i class="fas fa-info-circle"></i></a>
                    <a href="{{ path('role_edit', {'id': role.id}) }}"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun role trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <a class="button is-primary" href="{{ path('role_new') }}">Nouveau rôle</a>

{% endblock %}
