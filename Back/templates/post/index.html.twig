{% extends 'frontend_layout.html.twig' %}


{% block title %}Postes{% endblock %}

{% block body %}

<div class="list-ul">
    {% for post in posts %}
    <div class="list-li">
        <a href="{{ path('category_index', {'id': post.id}) }}">
            <div class="card padding-top">
                <div class="card-image">
                    <figure class="image is-128x128">
                        <img width="128px" height="128px" src="{{ asset(image_upload_path ~  (post.photo ?: 'default-poste.jpeg')) }}">
                    </figure>
                </div>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <div class="new-title">
                                <h2 class="title is-5">{{ post.name }}</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    {% else %}
    <tr>
        <td colspan="3">Aucun poste trouv√©</td>
    </tr>
    {% endfor %}
</div>

{% endblock %}